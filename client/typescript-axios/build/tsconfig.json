{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "es6",
    "lib": ["ES5", "DOM"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "lib",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src"]
}
